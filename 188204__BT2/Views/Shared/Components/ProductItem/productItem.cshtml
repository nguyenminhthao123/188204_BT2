@model _188204__BT2.Models.ProductListModel;
<div class="card-item">
    <img src="@Model.Image" />
    <div class="card-content">
        <h3>@Model.Name</h3>
        <p class="price-current">@Model.Calcula()đ</p>
        <div class="boxprice">
            <p class="price-old">@Model.FormatPrice()đ</p>
            <span class="percent"> -@Model.Discount %</span>
        </div>
    </div>
    <div class="btn-buy">Chọn mua</div>
</div>